#!/bin/sh
set -e

case "$0::$1" in
*.postinst::configure|*.postrm::remove)
	depmod -a -F /boot/System.map-3.16.0-23-generic 3.16.0-23-generic || true
	for dir in "/etc/kernel/postinst.d" "/etc/kernel/postinst.d/3.16.0-23-generic"
	do
		if [ -d "$dir" ]; then
			run-parts --verbose --exit-on-error --arg="3.16.0-23-generic" --arg="/boot/vmlinuz-3.16.0-23-generic" "$dir"
		fi
	done
	;;
esac
