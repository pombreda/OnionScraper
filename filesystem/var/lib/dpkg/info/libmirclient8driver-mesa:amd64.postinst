#!/bin/sh

set -e

if [ "$1" = "configure" ];
then
    update-alternatives --force --install \
        /etc/ld.so.conf.d/x86_64-linux-gnu_mirclient8driver.conf \
        x86_64-linux-gnu_mirclient8driver_conf \
        /usr/lib/x86_64-linux-gnu/mir/client8driver/mesa/ld.so.conf \
        500

    LDCONFIG_NOTRIGGER=y ldconfig
fi



exit 0
